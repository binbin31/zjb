{
  "bsonType": "object",
  "required": ["word"],
  "permission": {
    "read": true,        // 允许所有用户读取（包括匿名用户）
    "create": "auth",    // 仅认证用户可创建
    "update": "auth",    // 仅认证用户可更新
    "delete": "auth"     // 仅认证用户可删除
  },
  "properties": {
    "word": {
      "bsonType": "string",
      "description": "英语单词",
      "unique": true
    },
    "phonetic": {
      "bsonType": "string",
      "description": "音标"
    },
    "partOfSpeech": {
      "bsonType": "string",
      "description": "词性",
      "enum": ["n.", "v.", "adj.", "adv.", "prep.", "pron.", "conj.", "interj."]
    },
    "translation": {
      "bsonType": "string",
      "description": "中文翻译"
    },
    "example": {
      "bsonType": "string",
      "description": "例句"
    },
    "synonym": {
      "bsonType": "string",
      "description": "近义词"
    },
    "_createTime": {
      "bsonType": "date"
    },
    "_updateTime": {
      "bsonType": "date"
    }
  }
}